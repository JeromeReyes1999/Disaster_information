<%#= link_to 'Back to post', posts_path, class: 'btn btn-warning'%>
<%= link_to "Logout", destroy_user_session_path, :method => :delete, class:"btn btn-warning float-right" %>

<h1>Disaster type</h1>
<table class="table table-striped table-hover">
  <thead>
  <th>Id</th>
  <th>Type</th>
  <th>Action</th>
  </thead>
  <tbody>
  <% @categories&.each do |category| %>
    <tr>
      <td><%= category.id %></td>
      <td><%= category.name%></td>
      <td><%= link_to 'edit', edit_admin_category_path(category), class: 'btn btn-warning' %>
        <%= button_to "delete", admin_category_path(category), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to 'New', new_admin_category_path, class: 'btn btn-success' %>